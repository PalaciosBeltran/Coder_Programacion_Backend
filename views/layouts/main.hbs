<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <div class="container mt-3 jumbotron">
    <h3 class="text-primary">Ingresa un Nuevo Producto:</h3>
    <br>
    {{> partial}}
    <h3 class="text-primary"> Productos Existentes:</h3>    
    <div style="display: flex; flex-wrap: wrap; padding: 25px; background-color:rgb(27, 85, 245)">
    {{#each products}}
        <div>
            <h3 style=" font-family: Georgia; text-align: center; font-size:large; color:whitesmoke">{{this.title}}</h3>
            <div style="height: 250px; width: 250px; margin-right: 20px; margin-left: 20px;">
                <img src={{this.thumbnail}} alt={{this.id}} style="width: 100%; min-height: 100%; max-height: 100%; border-radius: 25px; background-color: whitesmoke">            
            </div>
            <h4 style=" font-family: Roboto; text-align: center; font-size:medium; color:whitesmoke; margin-top: 5px; margin-bottom: 15px">Precio: {{this.price}} usd</h4>            
        </div>
    {{/each}}
    </div>
</div>



